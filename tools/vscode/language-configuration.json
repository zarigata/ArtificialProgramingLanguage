{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "/*", "close": "*/", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<", ">"]
  ],
  "colorizedBracketPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*(\\{[^}\"']*$|\\([^)\"']*$|\\[[^\\]\"']*$)",
    "decreaseIndentPattern": "^\\s*[}\\)],?\\s*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(fn|def|struct|enum|trait|impl)\\s+[a-zA-Z_].*\\s*\\{\\s*$",
      "afterText": "^\\s*\\}",
      "action": {
        "indent": "indentOutdent",
        "appendText": ""
      }
    },
    {
      "beforeText": "^\\s*//.*$",
      "action": {
        "indent": "none",
        "appendText": "// "
      }
    }
  ],
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "electricCharacters": ["{", "}", "(", ")", "[", "]", "\"", "'"]
}
